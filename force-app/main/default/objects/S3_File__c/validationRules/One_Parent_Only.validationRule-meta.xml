<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>One_Parent_Only</fullName>
    <active>false</active>
    <errorConditionFormula>IF(ISBLANK(Account__c), 1, 0) +
IF(ISBLANK(Opportunity__c), 1, 0) +
IF(ISBLANK(Contact__c), 1, 0)
&lt;&gt; 2</errorConditionFormula>
    <errorMessage>Please fill only one, Account, Opportunity or Contact</errorMessage>
</ValidationRule>
